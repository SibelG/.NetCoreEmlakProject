@model CoreEmlakApp.Areas.User.Models.ResetPasswordModel

@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
<h3 style="text-align:center; margin-top:20px;">Forgot Password</h3>

<hr />
@if(ViewBag.State == null)
{
    <div style="position:relative; margin:auto;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-group">
                                <form method="post" asp-action="ResetPassword">
                                    <label>Enter Your e-mail</label>
                                    <input type="email" asp-for="Email" class="form-control">
                                    <br />
                                    <button type="submit" class="btn btn-primary">Send</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
else
{
    if (ViewBag.state)
    {
        @:<div class="alert alert-success">an informative e - mail has been sent to your e-mail address for the password request.</div>
    }
    else
    {
        @:<div class="alert-success">There is no such e-mail.</div>
    }
}

