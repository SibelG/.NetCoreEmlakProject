@model ResetPasswordModel
@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>

</hr>

@if(TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]

    </div>
}

<br />
<br />

<div class="container">
    <div class="row"> 
        <div class="col-md-4">
            <form method="post" asp-action="UpdatePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                    <div class="form-group">
                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control"/>
                            <span class="text text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">Update</button>
                        </div>
                    
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


